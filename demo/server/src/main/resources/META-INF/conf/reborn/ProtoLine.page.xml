        <line place="single" id="firstTab" collapsible="true" label="${clients}">
            <table id="first" query-id="ProtoClient">
                <pagination/>
                <columns>
                    <column text-field-id="name"/>
                    <column text-field-id="surname"/>
                </columns>
            </table>
            <table id="second" query-id="ProtoClient">
                <pagination/>
                <columns>
                    <column text-field-id="name"/>
