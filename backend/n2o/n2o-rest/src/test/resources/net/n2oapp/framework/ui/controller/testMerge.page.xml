<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <form id="main">
        <datasource query-id="testMerge" default-values-mode="merge">
            <filters>
                <eq field-id="id" param="id"/>
            </filters>
        </datasource>
        <fields>
            <input-text id="id"/>
            <input-text id="name" copied="false"/>
            <input-text id="surname" copied="true"/>
        </fields>
    </form>
</simple-page>