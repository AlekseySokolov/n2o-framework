<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Модальное окно">
    <datasources>
        <!-- нужны для того, чтобы прокидываемые с предыдущей страницы датасорсы переопределили их.
             Без них нельзя, т.к на текущей странице есть указания на modal_ds2 и modal_ds3 и
             если их не указать, то ломалось бы -->
        <datasource id="parent_ds"/>
        <datasource id="modal_ds"/>
    </datasources>

    <regions>
        <form datasource="modal_ds">
            <fields>
                <input-text id="id"/>
                <input-text id="name"/>
            </fields>
        </form>
    </regions>
    <toolbar>
        <button label="Сохранить" color="primary">
            <edit-list
                    operation="create"
                    datasource="parent_ds"
                    model="datasource"
                    item-datasource="modal_ds"
                    item-model="resolve"
            />
            <close/>
        </button>
        <button label="Закрыть">
            <close/>
        </button>
    </toolbar>
</page>
