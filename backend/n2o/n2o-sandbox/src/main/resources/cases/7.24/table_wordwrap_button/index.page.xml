<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Кнопка переноса слов таблицы">
    <datasources>
        <datasource id="ds1" query-id="data" size="5"/>
    </datasources>

    <regions>
        <table datasource="ds1" selection="none">
            <columns>
                <column text-field-id="id"/>
                <column text-field-id="id_ips"/>
                <column text-field-id="name"/>
                <column text-field-id="region"/>
            </columns>
            <filters place="top">
                <row>
                    <col size="3">
                        <input-text id="name"/>
                    </col>
                </row>
            </filters>
            <toolbar place="topRight">
                <group generate="word-wrap"/>
            </toolbar>
        </table>
    </regions>

</page>
