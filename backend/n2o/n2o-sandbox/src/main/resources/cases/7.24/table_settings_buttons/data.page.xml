<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <datasources>
        <datasource id="main" query-id="data">
            <filters>
                <eq field-id="id" param="id"/>
            </filters>
        </datasource>
    </datasources>
    <regions>
        <form datasource="main">
            <fields>
                <row>
                    <col>
                        <input-text id="id_"/>
                        <input-text id="id_ips"/>
                        <input-text id="name"/>
                    </col>
                    <col>
                        <input-text id="region"/>
                        <checkbox id="activity"/>
                    </col>
                </row>
            </fields>
        </form>
    </regions>
</page>
