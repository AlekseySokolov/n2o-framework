<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0">
    <list result-mapping="['data.persons']">
        <graphql>query Persons($name: String, $age: Int, $salary: Float, $addresses: [Address!]) { persons(name: $name, age: $age, salary: $salary, addresses: $addresses) {id name age salary} }</graphql>
    </list>

    <fields>
        <field id="id">
            <select/>
        </field>

        <field id="personName">
            <select mapping="['name']"/>
            <filters>
                <eq filter-id="personName" mapping="['name']"/>
            </filters>
        </field>

        <field id="age">
            <select mapping="['age']"/>
            <filters>
                <eq filter-id="age"/>
            </filters>
        </field>

        <field id="addresses">
            <select/>
            <filters>
                <in filter-id="address.name" mapping="['addresses']"/>
            </filters>
        </field>

        <field id="salary">
            <select mapping="['salary']"/>
            <filters>
                <eq filter-id="salary"/>
            </filters>
        </field>
    </fields>
</query>