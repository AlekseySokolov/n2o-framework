<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0">

    <list result-mapping="['data.persons']">
        <graphql forwarded-headers="testForwardedHeader">query persons {id name}</graphql>
    </list>

    <fields>
        <field id="id">
            <select/>
        </field>

        <field id="personName">
            <select mapping="['name']"/>
        </field>
    </fields>
</query>
