<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-5.0">

    <filters>
        <eq field-id="id" filter-id="id"/>
        <eq field-id="isConfirmDoc" filter-id="isConfirmDoc"/>
        <eq field-id="documentType.name"/>
    </filters>

    <fields>
        <field id="id" domain="integer"/>
        <reference id="documentType">
            <field id="name"/>
        </reference>
        <field id="isConfirmDoc"/>
    </fields>
</query>
