        <actions>
            <action id="update"/>
        </actions>
        <columns>
            <column text-field-id="test0">
                <link/>
            </column>
            <column text-field-id="test1">
                <link icon="iconTest"/>
            </column>
            <column text-field-id="test2">
                <link icon="{id}" test:codeVerified="{emailSender.status=='send'}"/>
            </column>
            <column text-field-id="test3">
                <link url="/test/{uid}" target="newWindow"/>
            </column>
            <column text-field-id="test4">
                <link action-id="update"/>
            </column>
            <column text-field-id="test5">
