<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" datasource="dsForPage">
    <datasources>
        <datasource id="ds1"/>
        <datasource id="ds2"/>
        <datasource id="dsForPage"/>
    </datasources>
    <regions>
        <form datasource="ds1">
            <toolbar>
                <button id="b1" model="edit">
                    <switch value-field-id="test1" model="multi">
                        <case value="A">
                            <perform type="t1"/>
                            <a href="/test1"/>
                        </case>
                        <case value="B">
                            <switch datasource="ds2" value-field-id="test2">
                                <case value="BA">
                                    <perform type="t1"/>
                                    <a href="/test1"/>
                                </case>
                                <default>
                                    <perform type="t1"/>
                                    <perform type="t2"/>
                                </default>
                            </switch>
                        </case>
                        <default>
                            <perform type="t1"/>
                        </default>
                    </switch>
                </button>
                <button id="b2" datasource="ds2" model="filter">
                    <switch value-field-id="test1">
                        <case value="A">
                            <perform type="t1"/>
                        </case>
                    </switch>
                </button>
            </toolbar>
        </form>
    </regions>

    <toolbar>
        <button id="b3">
            <switch value-field-id="test1">
                <case value="A">
                    <switch value-field-id="test2">
                        <case value="AA"/>
                    </switch>
                </case>
            </switch>
        </button>
    </toolbar>
</page>
