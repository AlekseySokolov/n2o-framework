<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" datasource="dsForPage">
    <datasources>
        <datasource id="ds1"/>
        <datasource id="ds2"/>
        <datasource id="dsForPage"/>
    </datasources>
    <regions>
        <form datasource="ds1">
            <toolbar>
                <button id="b1" model="edit">
                    <if test="code == 'A' &amp;&amp; type == 1">
                        <perform type="t1"/>
                        <if test="name == 'test1'">
                            <perform type="t1"/>
                            <a href="/test1"/>
                        </if>
                        <else>
                            <a href="/test1"/>
                        </else>
                    </if>
                    <else-if test="code == 'A' &amp;&amp; type == 2">
                        <if test="name == 'test2'" datasource="ds2" model="filter">
                            <perform type="t1"/>
                        </if>
                        <else>
                            <a href="/test1"/>
                        </else>
                        <show-modal page-id="card"/>
                    </else-if>
                    <else>
                        <alert text="Не выполнены условия"/>
                    </else>

                    <if test="code == 'B'">
                        <alert text="Next"/>
                    </if>
                </button>
            </toolbar>
        </form>
    </regions>

    <toolbar>
        <button id="b2">
            <if test="code == 'A' &amp;&amp; type == 1">
                <if test="name == 'test1'">
                    <perform type="t1"/>
                </if>
                <else>
                    <a href="/test1"/>
                </else>
            </if>
            <else>
                <alert text="Не выполнены условия"/>
            </else>
        </button>
    </toolbar>
</page>
