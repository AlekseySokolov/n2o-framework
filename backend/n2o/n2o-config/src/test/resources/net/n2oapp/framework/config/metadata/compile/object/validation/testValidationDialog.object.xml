<?xml version='1.0' encoding='UTF-8'?>
<object xmlns="http://n2oapp.net/framework/config/schema/object-4.0">
    <validations>
        <dialog id="dialog1" message="message {age}" size="sm" title="title"
                server-moment="after-fail-operation"
                result="name=='test'">
            <invocation>
                <test operation="create" file="test.json"/>
            </invocation>
            <in>
                <field id="name"/>
                <field id="name2" required="false"/>
                <field id="validated"/>
            </in>
            <out>
                <field id="name"/>
            </out>
            <toolbar>
                <button id="yes" label="Yes">
                    <invoke operation-id="create">
                        <header-param name="validated" value="true" datasource="test" model="multi"/>
                    </invoke>
                </button>
                <button>
                    <close/>
                </button>
            </toolbar>
        </dialog>
        <dialog id="dialog2"/>
    </validations>
</object>