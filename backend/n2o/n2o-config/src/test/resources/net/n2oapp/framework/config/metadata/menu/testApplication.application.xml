<?xml version='1.0' encoding='UTF-8'?>
<application xmlns="http://n2oapp.net/framework/config/schema/application-2.0">\
    <datasources>
        <datasource id="ds1"/>
    </datasources>
    <header title="Хедер">
        <nav>
            <menu-item id="notif"
                       name="Уведомления"
                       icon="fa fa-bell"
                       badge="2"
                       badge-color="warning"
                       datasource="ds1">
                <open-page page-id="testMenu" route="/login"/>
            </menu-item>
            <menu-item image="/static/users/ivan90.png"
                       image-shape="square">
                <open-page page-id="testMenu" route="/logout"/>
            </menu-item>
            <dropdown-menu id="user"
                           name="Виктория"
                           image="/static/users/vika91.png"
                           image-shape="circle">
                <menu-item name="Профиль"
                           icon="fa fa-user">
                    <a href="/profile" target="application"/>
                </menu-item>
<!--                <divider/>-->
            </dropdown-menu>
            <dropdown-menu id="messages"
                           name="Сообщения"
                           icon="fa fa-bell"/>
            <menu-item id="messages" datasource="ds1">
                <open-page page-id="testMenu" route="/:id">
                    <params>
                        <path-param name="id" value="{id}" datasource="ds1"/>
                    </params>
                </open-page>
            </menu-item>
        </nav>
    </header>

</application>
