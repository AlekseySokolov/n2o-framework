                    </switch>
                </badge>
            </column>
            <column text-field-id="test2">
                <badge color="info"/>
            </column>
            <column text-field-id="test3">
                <badge image-field-id="image" image-position="right" shape="rounded" image-shape="square"/>
            </column>
            <column text-field-id="test4">
                <badge image-field-id="img"/>
            </column>
        </columns>
    </table>
