<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <datasources>
        <datasource id="ds"/>
        <datasource id="ds2"/>
        <app-datasource id="appDs"/>
    </datasources>

    <toolbar>
        <button>
            <show-modal page-id="testInheritedDatasourceRefPageAttributesModal" route="/modal">
                <datasources>
                    <!-- source: parent, target: parent -->
                    <inherited-datasource id="inh" source-datasource="ds">
                        <submit target-datasource="ds2"/>
                    </inherited-datasource>
                    <!-- source: this, target: this -->
                    <inherited-datasource id="inh2" source-datasource="ds" source-ref-page="this">
                        <submit target-datasource="ds2" target-ref-page="this"/>
                    </inherited-datasource>
                    <!-- source: parent (app-ds), target: parent (app-ds) -->
                    <inherited-datasource id="inh3" source-datasource="appDs">
                        <submit target-datasource="appDs"/>
                    </inherited-datasource>
                    <!-- source: this (app-ds), target: this (app-ds) -->
                    <inherited-datasource id="inh4" source-datasource="appDs2" source-ref-page="this">
                        <submit target-datasource="appDs2" target-ref-page="this"/>
                    </inherited-datasource>
                </datasources>
            </show-modal>
        </button>
    </toolbar>
</page>
