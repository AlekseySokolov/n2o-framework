<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0">
    <datasources>
        <datasource id="ds"/>
        <datasource id="ds2"/>

        <app-datasource id="appDs"/>
    </datasources>

    <toolbar>
        <button id="btn1">
            <!-- parent -> this -->
            <show-modal page-id="testCopyRefPageAttributesModal" route="/modal1"
                        submit-action-type="copy"
                        copy-datasource="ds"
                        copy-ref-page="parent"
                        target-datasource="ds2"
                        target-ref-page="this"/>
        </button>

        <button>
            <!-- this -> parent -->
            <show-modal page-id="testCopyRefPageAttributesModal" route="/modal2"
                        submit-action-type="copy"
                        copy-datasource="ds"
                        target-datasource="ds2"/>
        </button>

        <button>
            <!-- parent -> this (with app-datasource) -->
            <show-modal page-id="testCopyRefPageAttributesModal" route="/modal3"
                        submit-action-type="copy"
                        copy-datasource="appDs"
                        copy-ref-page="parent"
                        target-datasource="appDs2"
                        target-ref-page="this"/>
        </button>
    </toolbar>
</page>
