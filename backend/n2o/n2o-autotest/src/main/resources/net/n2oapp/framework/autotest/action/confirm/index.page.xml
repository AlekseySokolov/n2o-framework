<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0" name="popover">
    <form>
        <datasource object-id="myObject"/>
        <fields>
            <hidden id="id" default-value="1"/>
        </fields>
        <toolbar place="bottomLeft">
            <button label="popover">
                <confirm title="burn" text="Going to hell?" type="popover">
                    <ok label="Hell, yes"/>
                    <cancel label="No no no"/>
                </confirm>
                <invoke operation-id="echo"/>
            </button>
            <button label="dialog">
                <confirm text="confirm-text"/>
                <invoke operation-id="echo"/>
            </button>
        </toolbar>
    </form>
</simple-page>