<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Автотест для проверки восстановления фильтров после обновления страницы">
    <table>
        <datasource id="person" query-id="person"/>
        <filters>
            <input-select id="kind" type="multi" query-id="kind" search="false" label-field-id="name"/>
        </filters>
        <columns>
            <column text-field-id="id" label="Идентификатор"/>
            <column text-field-id="name" label="Имя"/>
            <column text-field-id="kind.name" label="Вид документа"/>
        </columns>
    </table>
</simple-page>