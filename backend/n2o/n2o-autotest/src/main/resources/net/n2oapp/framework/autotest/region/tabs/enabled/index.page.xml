<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Автотест доступности вкладок">
    <datasources>
        <datasource id="formDs"/>
    </datasources>

    <regions>
        <form datasource="formDs">
            <fields>
                <radio-group id="radio" label="Вкладки">
                    <options>
                        <option id="1" name="Первая"/>
                        <option id="2" name="Вторая"/>
                    </options>
                </radio-group>
            </fields>
        </form>
        <tabs>
            <tab id="tab1" name="Первая" datasource="formDs">
                <form>
                    <fields>
                        <input-text id="test1"/>
                    </fields>
                </form>
            </tab>
            <tab id="tab2" name="Вторая" enabled="{radio.id == 1}" datasource="formDs">
                <form>
                    <fields>
                        <input-text id="test2"/>
                    </fields>
                </form>
            </tab>
            <tab id="tab3" name="Третья" datasource="formDs" enabled="false">
                <form>
                    <fields>
                        <input-text id="test3"/>
                    </fields>
                </form>
            </tab>
            <tab id="tab4" name="Четвертая" datasource="formDs" enabled="{radio.id == 2}">
                <form>
                    <fields>
                        <input-text id="test4"/>
                    </fields>
                </form>
            </tab>
        </tabs>
    </regions>
</page>