<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Страница для автотеста input-select и Input-select-tree с настраиваемым ожиданием ввода">
    <form>
        <fields>
            <input-select
                    id="test"
                    label="Input-select min-length=3"
                    placeholder="Минимальная длина 3"
                    query-id="test"
                    search-filter-id="nameLike"
                    search-min-length="3"
                    throttle-delay="500"/>

            <input-select-tree
                    id="tree"
                    label="Input-select-tree min-length=4"
                    placeholder="Минимальная длина 4"
                    parent-field-id="parent"
                    query-id="test"
                    search-filter-id="nameLike"
                    search-min-length="4"
                    throttle-delay="500"/>
        </fields>
    </form>
</simple-page>