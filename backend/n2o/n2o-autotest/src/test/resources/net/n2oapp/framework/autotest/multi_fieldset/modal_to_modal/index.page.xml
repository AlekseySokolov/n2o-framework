<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Моя первая страница">
    <datasources>
        <datasource id="ds1"/>
    </datasources>

    <regions>
        <form datasource="ds1">
            <fields>
                <!-- новые атрибуты:
                     primary-key="id"
                     generate-primary-key="true"-->
                <multi-set
                        id="fl"
                        label="Проживание с мужем или женой, направленными работать за границу"
                        add-label="Добавить период"
                        can-add="true"
                        can-copy="true"
                        can-remove="true"
                        can-remove-all="true"
                        can-remove-first="true"
                        primary-key="id"
                        generate-primary-key="true"
                >
                    <row>
                        <output-text id="id"/>
                        <input-text id="surname" label="Фамилия"/>
                        <input-text id="name" label="Имя"/>
                        <input-text id="patronymic" label="Отчество"/>

                        <button label="Изменить ">
                            <!--
                                    Бэк: без доработок
                                    Фронт: в мультисетах обходит метадату и заменяет все [index] на номер строки
                                    -->
                            <show-modal page-id="update" route="/:id/update">
                                <params>
                                    <path-param name="id" value="{fl[index].id}"/>
                                </params>
                            </show-modal>
                        </button>
                    </row>
                </multi-set>
            </fields>
        </form>
    </regions>
</page>