<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Страница для автотеста проверяющего доступность поля по условию зависимости">
    <datasources>
        <datasource id="ds" query-id="test" size="5"/>
    </datasources>
    <regions>
        <table datasource="ds" selection="checkbox">
            <filters>
                <masked-input mask="999-999-999 99" placeholder="___-___-___ __" label="СНИЛС" id="snils"/>
            </filters>
            <toolbar place="topLeft">
                <button label="Добавить" icon="fa fa-plus" color="primary">
                    <open-page page-id="subPage"/>
                </button>
            </toolbar>
            <columns>
                <column text-field-id="id"/>
                <column text-field-id="snils" label="СНИЛС"/>
            </columns>
        </table>
    </regions>
</page>