<?xml version='1.0' encoding='UTF-8'?>
<object xmlns="http://n2oapp.net/framework/config/schema/object-4.0">
    <operations>
        <operation id="create">
            <invocation>
                <test file="test.json" operation="create"/>
            </invocation>
            <in>
                <field id="name"/>
                <field id="surname"/>
                <field id="address"/>
                <field id="org"/>
            </in>
            <out>
                <field id="id"/>
            </out>
        </operation>

        <operation id="update">
            <invocation>
                <test file="net/n2oapp/framework/autotest/widget/form/save_with_one_button/test.json" operation="update"/>
            </invocation>
            <in>
                <field id="id"/>
                <field id="name"/>
                <field id="surname"/>
                <field id="address"/>
                <field id="org"/>
            </in>
        </operation>
    </operations>
</object>
