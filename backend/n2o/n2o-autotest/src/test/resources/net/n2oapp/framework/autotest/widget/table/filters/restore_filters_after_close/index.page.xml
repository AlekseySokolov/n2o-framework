<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
             name="Некорректное отображение фильтров после закрытия страницы">
    <table>
        <datasource query-id="test"/>
        <columns>
            <column text-field-id="id"/>
            <column text-field-id="name"/>
        </columns>
        <toolbar>
            <button label="open-page">
                <open-page page-id="open" route="/:id/open">
                    <params>
                        <path-param name="id" value="{id}"/>
                    </params>
                </open-page>
            </button>
            <button label="show-modal">
                <show-modal page-id="open" route="/:id/open2">
                    <params>
                        <path-param name="id" value="{id}"/>
                    </params>
                </show-modal>
            </button>
            <button label="open-drawer">
                <open-drawer page-id="open" route="/:id/open3">
                    <params>
                        <path-param name="id" value="{id}"/>
                    </params>
                </open-drawer>
            </button>
        </toolbar>
        <filters>
            <input-text id="name">

            </input-text>
        </filters>
    </table>
</simple-page>
